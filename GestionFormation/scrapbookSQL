/*suppression tables*/
drop table client cascade constraints purge;
drop table conseiller cascade constraints purge;

truncate table conseiller;
truncate table client;

/*sequences*/
CREATE SEQUENCE seqCons
START WITH     1
INCREMENT BY   1;
 
CREATE SEQUENCE seqClient 
START WITH     1
INCREMENT BY   1;
 
/*creation tables*/
create table client(id int constraint pk_client primary key, nom varchar(20), prenom varchar(20), adresse varchar(60), codePostal varchar(5), ville varchar(20), telephone varchar(10), listeCompte int);
create table conseiller(id int constraint pk_conseiller primary key, nom varchar(20), prenom varchar(20), login varchar(20), password varchar(30), listeClient int constraint fk_idcl references client(id));


/*select*/
select * from client;
select * from conseiller;